<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.asdzheng.sweetshow.ui.view.waveswiperefreshlayout.WaveSwipeRefreshLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wave_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:above_wave_color="@color/waveLightColor"
        app:blow_wave_color="@color/waveDeepColor"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_home_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="true"
            android:padding="4dp"
            />

    </com.asdzheng.sweetshow.ui.view.waveswiperefreshlayout.WaveSwipeRefreshLayout>

</LinearLayout>